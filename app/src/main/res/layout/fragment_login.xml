<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff66ff26">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/login_editText_email"
        android:layout_marginTop="40dp"
        android:hint="@string/login_editText_email"
        android:layout_below="@+id/txtdbEmail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_editText_password"
        android:hint="@string/login_editText_passwd"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/login_editText_email"
        android:layout_toLeftOf="@+id/txtdbPasswd"
        android:layout_toStartOf="@+id/txtdbPasswd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button_ingresar"
        android:id="@+id/login_button_ingresar"
        android:layout_above="@+id/Login_button_ingresarconface"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Login_button_ingresarconface"
        android:id="@+id/Login_button_ingresarconface"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/textView_recordar"
        android:id="@+id/textView_recordar"
        android:layout_above="@+id/login_button_ingresar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/textView_registrase"
        android:id="@+id/textView_registrarse"
        android:layout_below="@+id/Login_button_ingresarconface"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/textView_olvido"
        android:id="@+id/textView_olvido"
        android:layout_alignTop="@+id/textView_registrarse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:id="@+id/txtdbEmail"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_recordar"
        android:layout_toEndOf="@+id/textView_recordar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contraseÃ±a"
        android:id="@+id/txtdbPasswd"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/login_editText_email"
        android:layout_toEndOf="@+id/login_editText_email" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button_registrarse"
        android:text="@string/login_button_registrarse"
        android:onClick="clicRegistrarse"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView_registrarse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>